{
	"name": "tsharp-audio-cutter",
	"version": "1.0.0",
	"description": "Audio cutter app for secondlife uploads.",
	"main": "dist",
	"author": "C0C41N",
	"license": "MIT",
	"scripts": {
		"start": "snowpack dev",
		"build": "snowpack build",
		"make": "yarn build && electron-builder build"
	},
	"dependencies": {
		"@fontsource/montserrat": "^4.2.2",
		"ffmpeg-static": "^4.3.0",
		"ffprobe-static": "^3.0.0",
		"fluent-ffmpeg": "^2.1.2",
		"react": "^17.0.0",
		"react-dom": "^17.0.0",
		"react-router-dom": "^5.2.0",
		"rxjs": "^6.6.7",
		"styled-components": "^5.2.3"
	},
	"devDependencies": {
		"@snowpack/plugin-react-refresh": "^2.4.0",
		"@snowpack/plugin-sass": "^1.4.0",
		"@snowpack/plugin-typescript": "^1.2.0",
		"@types/ffmpeg-static": "^3.0.0",
		"@types/ffprobe-static": "^2.0.0",
		"@types/fluent-ffmpeg": "^2.1.17",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-router-dom": "^5.1.7",
		"@types/snowpack-env": "^2.3.2",
		"@types/styled-components": "^5.1.9",
		"electron": "^12.0.2",
		"electron-builder": "^22.10.5",
		"electron-snowpack-plugin": "^1.13.0",
		"snowpack": "^3.1.2",
		"typescript": "^4.0.0"
	},
	"resolutions": {
		"styled-components": "^5"
	},
	"build": {
		"productName": "Tsharp Audio Cutter",
		"directories": {
			"output": "release/"
		},
		"files": [
			"dist/**/*"
		],
		"win": {
			"icon": "dist/build/assets/icons",
			"target": [
				{
					"target": "nsis",
					"arch": [
						"ia32"
					]
				}
			]
		},
		"mac": {
			"icon": "dist/build/assets/icons",
			"target": [
				"dmg"
			]
		},
		"linux": {
			"icon": "dist/build/assets/icons",
			"target": [
				"AppImage"
			]
		}
	}
}